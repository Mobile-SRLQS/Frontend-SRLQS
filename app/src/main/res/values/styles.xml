<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    shape-->
    <style name="roundedImageView">
        <item name="cornerSize">50%</item>
        <item name="strokeColor">@color/dark_green</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!--    font-->
    <style name="H1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="H2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="B1">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="B2">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <!--    button-->
    <style name="BasicButtonDarkGreen" parent="Widget.Material3.Button.ElevatedButton">
        <item name="backgroundTint">@color/dark_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BasicButtonLightGreen" parent="Widget.Material3.Button.ElevatedButton">
        <item name="backgroundTint">@color/light_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OutlinedButtonDarkGreen" parent="Widget.Material3.Button.ElevatedButton">
        <item name="strokeColor">@color/dark_green</item>
        <item name="strokeWidth">3dp</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OutlinedButtonLightGreen" parent="Widget.Material3.Button.ElevatedButton">
        <item name="strokeColor">@color/light_green</item>
        <item name="strokeWidth">3dp</item>
        <item name="android:textColor">@color/light_green</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--    text input layout-->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/dark_green</item>
        <item name="cursorColor">@color/dark_dark_green</item>
        <item name="endIconTint">@color/dark_green</item>
        <item name="hintTextColor">@color/dark_green</item>
        <item name="passwordToggleTint">@color/dark_dark_green</item>
        <item name="startIconTint">@color/dark_green</item>
    </style>

    <style name="Widget.App.Spinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="overlapAnchor">true</item>
        <item name="android:background">@drawable/spinner_background</item>
    </style>

</resources>