<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Page Indicator -->
        <TextView
            android:id="@+id/pageIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_seeking_indicator"
            style="@style/H2"
            android:textColor="#2F4F4F"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Title with Info Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/H1"
                android:text="@string/help_seeking_title"
                android:textColor="#2F4F4F"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Information Icon -->
            <ImageView
                android:id="@+id/infoIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info"
                android:contentDescription="@string/info_icon"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_seeking_q17"
            android:textSize="16sp"
            style="@style/H2"
            android:textColor="#2F4F4F"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tidak_setuju_str"
            android:textSize="14sp"
            style="@style/B1"
            android:layout_marginBottom="4dp" />

        <RadioGroup
            android:id="@+id/radioGroup17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton style="@style/B1" android:id="@+id/radio17_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_1" />
            <RadioButton style="@style/B1" android:id="@+id/radio17_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_2_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio17_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_3_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio17_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_4_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio17_5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_5_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio17_6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_6_scale" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sangat_setuju_str"
            android:textSize="14sp"
            style="@style/B1"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Question 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_seeking_q18"
            android:textSize="16sp"
            style="@style/H2"
            android:textColor="#2F4F4F"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tidak_setuju_str"
            android:textSize="14sp"
            style="@style/B1"
            android:layout_marginBottom="4dp" />

        <RadioGroup
            android:id="@+id/radioGroup18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton style="@style/B1" android:id="@+id/radio18_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_1" />
            <RadioButton style="@style/B1" android:id="@+id/radio18_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_2_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio18_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_3_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio18_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_4_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio18_5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_5_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio18_6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_6_scale" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sangat_setuju_str"
            android:textSize="14sp"
            style="@style/B1"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Repeat the above structure for Question 3 and Question 4 -->

        <!-- Question 3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_seeking_q19"
            android:textSize="16sp"
            style="@style/H2"
            android:textColor="#2F4F4F"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tidak_setuju_str"
            android:textSize="14sp"
            style="@style/B1"
            android:layout_marginBottom="4dp" />

        <RadioGroup
            android:id="@+id/radioGroup19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton style="@style/B1" android:id="@+id/radio19_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_1" />
            <RadioButton style="@style/B1" android:id="@+id/radio19_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_2_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio19_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_3_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio19_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_4_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio19_5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_5_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio19_6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_6_scale" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sangat_setuju_str"
            android:textSize="14sp"
            style="@style/B1"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Question 4 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_seeking_q20"
            android:textSize="16sp"
            style="@style/H2"
            android:textColor="#2F4F4F"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tidak_setuju_str"
            android:textSize="14sp"
            style="@style/B1"
            android:layout_marginBottom="4dp" />

        <RadioGroup
            android:id="@+id/radioGroup20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton style="@style/B1" android:id="@+id/radio20_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_1" />
            <RadioButton style="@style/B1" android:id="@+id/radio20_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_2_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio20_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_3_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio20_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_4_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio20_5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_5_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio20_6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_6_scale" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sangat_setuju_str"
            android:textSize="14sp"
            style="@style/B1"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Progress Indicator -->
        <TextView
            android:id="@+id/progressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_seeking_progress_indicator"
            android:textSize="16sp"
            style="@style/H2"
            android:textColor="#2F4F4F"
            android:layout_marginTop="16dp"
           />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp">

            <Button
                android:id="@+id/prevButton"
                style="@style/BasicButtonLightGreen"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_selector"
                android:backgroundTint="#4CAF50"
                android:drawableLeft="@drawable/arrow_back"
                android:text="@string/str_prev_button"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/nextButton"
                style="@style/BasicButtonLightGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_selector"
                android:backgroundTint="#4CAF50"
                android:drawableEnd="@drawable/arrow_next"

                android:text="@string/str_next_button"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
