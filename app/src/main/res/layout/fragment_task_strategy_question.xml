<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Page Indicator -->
        <TextView
            android:id="@+id/pageIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="@string/task_strategies_indicator"
            android:textColor="#2F4F4F"
            android:textSize="16sp" />

        <!-- Title with Info Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/task_strategies_title"
                style="@style/H1"
                />

            <!-- Information Icon -->
            <ImageView
                android:id="@+id/infoIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:contentDescription="@string/info_icon"
                android:focusable="true"
                android:src="@drawable/ic_info" />
        </LinearLayout>

        <!-- Question 1 -->
        <TextView
            style="@style/H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/task_strategies_q9"
            android:textColor="#2F4F4F"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            style="@style/B1"
            android:text="@string/tidak_setuju_str"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/radioGroup9"
            style="@style/B1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Radio Buttons 1-6 for Question 1 -->
            <RadioButton
                android:id="@+id/radio9_1"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_1" />

            <RadioButton
                android:id="@+id/radio9_2"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_2_scale" />

            <RadioButton
                android:id="@+id/radio9_3"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_3_scale" />

            <RadioButton
                android:id="@+id/radio9_4"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_4_scale" />

            <RadioButton
                android:id="@+id/radio9_5"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_5_scale" />

            <RadioButton
                android:id="@+id/radio9_6"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_6_scale" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:text="@string/sangat_setuju_str"
            style="@style/B1"
            android:textSize="14sp" />

        <!-- Question 2 -->
        <TextView
            style="@style/H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/task_strategies_q10"
            android:textColor="#2F4F4F"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            style="@style/B1"
            android:text="@string/tidak_setuju_str"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/radioGroup10"
            style="@style/B1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Radio Buttons 1-6 for Question 2 -->
            <RadioButton
                android:id="@+id/radio10_1"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_1" />

            <RadioButton
                android:id="@+id/radio10_2"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_2_scale" />

            <RadioButton
                android:id="@+id/radio10_3"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_3_scale" />

            <RadioButton
                android:id="@+id/radio10_4"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_4_scale" />

            <RadioButton
                android:id="@+id/radio10_5"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_5_scale" />

            <RadioButton
                android:id="@+id/radio10_6"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_6_scale" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:text="@string/sangat_setuju_str"
            style="@style/B1"
            android:textSize="14sp" />

        <!-- Repeat the above structure for Question 3 and Question 4 -->

        <!-- Question 3 -->
        <TextView
            style="@style/H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/task_strategies_q11"
            android:textColor="#2F4F4F"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            style="@style/B1"
            android:text="@string/tidak_setuju_str"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/radioGroup11"
            style="@style/B1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio11_1"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_1" />

            <RadioButton
                android:id="@+id/radio11_2"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_2_scale" />

            <RadioButton
                android:id="@+id/radio11_3"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_3_scale" />

            <RadioButton
                android:id="@+id/radio11_4"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_4_scale" />

            <RadioButton
                android:id="@+id/radio11_5"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_5_scale" />

            <RadioButton
                android:id="@+id/radio11_6"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_6_scale" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:text="@string/sangat_setuju_str"
            style="@style/B1"
            android:textSize="14sp" />

        <!-- Question 4 -->
        <TextView
            style="@style/H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/task_strategies_q12"
            android:textColor="#2F4F4F"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            style="@style/B1"
            android:text="@string/tidak_setuju_str"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/radioGroup12"
            style="@style/B1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio12_1"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_1" />

            <RadioButton
                android:id="@+id/radio12_2"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_2_scale" />

            <RadioButton
                android:id="@+id/radio12_3"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_3_scale" />

            <RadioButton
                android:id="@+id/radio12_4"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_4_scale" />

            <RadioButton
                android:id="@+id/radio12_5"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_5_scale" />

            <RadioButton
                android:id="@+id/radio12_6"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_6_scale" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:text="@string/sangat_setuju_str"
            style="@style/B1"
            android:textSize="14sp" />

        <!-- Progress Indicator -->
        <TextView
            android:id="@+id/progressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="@style/H2"
            android:text="@string/task_strategies_progress_indicator"
            android:textColor="#2F4F4F"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp">

            <Button
                android:id="@+id/prevButton"
                style="@style/BasicButtonLightGreen"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_selector"
                android:backgroundTint="#4CAF50"
                android:drawableLeft="@drawable/arrow_back"
                android:text="@string/str_prev_button"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/nextButton"
                style="@style/BasicButtonLightGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_selector"
                android:backgroundTint="#4CAF50"
                android:drawableEnd="@drawable/arrow_next"

                android:text="@string/str_next_button"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
