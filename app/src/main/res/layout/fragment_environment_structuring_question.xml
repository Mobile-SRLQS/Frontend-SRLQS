<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Page Indicator -->
        <TextView
            android:id="@+id/pageIndicator"
            style="@style/H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="@string/environment_structuring_indicator" />

        <!-- Title with Info Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                style="@style/H1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/environment_structuring_title" />

            <!-- Information Icon -->
            <ImageView
                android:id="@+id/infoIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:contentDescription="@string/info_icon"
                android:focusable="true"
                android:src="@drawable/ic_info" />
        </LinearLayout>

        <TextView
            style="@style/H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/environment_structuring_q5" />

        <TextView
            style="@style/B1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/tidak_setuju_str" />

        <RadioGroup
            android:id="@+id/radioGroup5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio5_1"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_1" />

            <RadioButton
                android:id="@+id/radio5_2"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_2_scale" />

            <RadioButton
                android:id="@+id/radio5_3"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_3_scale" />

            <RadioButton
                android:id="@+id/radio5_4"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_4_scale" />

            <RadioButton
                android:id="@+id/radio5_5"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_5_scale" />

            <RadioButton
                android:id="@+id/radio5_6"
                style="@style/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_6_scale" />
        </RadioGroup>

        <TextView
            style="@style/B1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:text="@string/sangat_setuju_str" />

        <TextView
            style="@style/H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/environment_structuring_q6" />

        <TextView
            style="@style/B1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/tidak_setuju_str" />

        <RadioGroup
            android:id="@+id/radioGroup6"
            android:layout_width="wrap_content"
