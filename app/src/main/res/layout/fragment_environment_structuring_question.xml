                android:text="@string/str_6_scale" />
        </RadioGroup>

        <TextView
            style="@style/B1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:text="@string/sangat_setuju_str" />

        <!-- Progress Indicator -->
        <TextView
            android:id="@+id/progressIndicator"
            style="@style/H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/environment_structuring_progress_indicator" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp">

            <Button
                android:id="@+id/prevButton"
                style="@style/BasicButtonLightGreen"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_selector"
                android:backgroundTint="#4CAF50"
                android:drawableLeft="@drawable/arrow_back"
                android:text="@string/str_prev_button"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/nextButton"
                style="@style/BasicButtonLightGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_selector"
                android:backgroundTint="#4CAF50"
                android:drawableEnd="@drawable/arrow_next"

                android:text="@string/str_next_button"
                android:textColor="#FFFFFF" />
        </RelativeLayout>


    </LinearLayout>
</ScrollView>
