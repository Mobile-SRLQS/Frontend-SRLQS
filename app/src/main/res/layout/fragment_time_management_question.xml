<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Page Indicator -->
        <TextView
            android:id="@+id/pageIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_management_indicator"
            android:textColor="#2F4F4F"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Title with Info Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/time_management_title"
                style="@style/H1"
                android:textColor="#2F4F4F"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Information Icon -->
            <ImageView
                android:id="@+id/infoIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_info"
                android:contentDescription="@string/info_icon"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Question 1 -->
        <TextView
            style="@style/H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_management_q13"
            android:textSize="16sp"
            android:textColor="#2F4F4F"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/B1"
            android:text="@string/tidak_setuju_str"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <RadioGroup
            android:id="@+id/radioGroup13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Radio Buttons 1-6 for Question 1 -->
            <RadioButton style="@style/B1" android:id="@+id/radio13_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_1" />
            <RadioButton style="@style/B1" android:id="@+id/radio13_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_2_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio13_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_3_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio13_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_4_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio13_5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_5_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio13_6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_6_scale" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/B1"
            android:text="@string/sangat_setuju_str"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Question 2 -->
        <TextView
            style="@style/H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_management_q14"
            android:textSize="16sp"
            android:textColor="#2F4F4F"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/B1"
            android:text="@string/tidak_setuju_str"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <RadioGroup
            android:id="@+id/radioGroup14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Radio Buttons 1-6 for Question 2 -->
            <RadioButton style="@style/B1" android:id="@+id/radio14_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_1" />
            <RadioButton style="@style/B1" android:id="@+id/radio14_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_2_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio14_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_3_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio14_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_4_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio14_5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_5_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio14_6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_6_scale" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/B1"
            android:text="@string/sangat_setuju_str"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Repeat the above structure for Question 3 and Question 4 -->

        <!-- Question 3 -->
        <TextView
            style="@style/H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_management_q15"
            android:textSize="16sp"
            android:textColor="#2F4F4F"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/B1"
            android:text="@string/tidak_setuju_str"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <RadioGroup
            android:id="@+id/radioGroup15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton style="@style/B1" android:id="@+id/radio15_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_1" />
            <RadioButton style="@style/B1" android:id="@+id/radio15_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_2_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio15_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_3_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio15_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_4_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio15_5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_5_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio15_6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_6_scale" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/B1"
            android:text="@string/sangat_setuju_str"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Question 4 -->
        <TextView
            style="@style/H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_management_q16"
            android:textSize="16sp"
            android:textColor="#2F4F4F"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/B1"
            android:text="@string/tidak_setuju_str"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <RadioGroup
            android:id="@+id/radioGroup16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton style="@style/B1" android:id="@+id/radio16_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_1" />
            <RadioButton style="@style/B1" android:id="@+id/radio16_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_2_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio16_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_3_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio16_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_4_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio16_5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_5_scale" />
            <RadioButton style="@style/B1" android:id="@+id/radio16_6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_6_scale" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/B1"
            android:text="@string/sangat_setuju_str"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Progress Indicator -->
        <TextView
            android:id="@+id/progressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_management_progress_indicator"
            style="@style/H2"
            android:textSize="16sp"
            android:textColor="#2F4F4F"
            android:layout_marginTop="16dp"
             />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp">

            <Button
                android:id="@+id/prevButton"
                style="@style/BasicButtonLightGreen"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_selector"
                android:backgroundTint="#4CAF50"
                android:drawableLeft="@drawable/arrow_back"
                android:text="@string/str_prev_button"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/nextButton"
                style="@style/BasicButtonLightGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_selector"
                android:backgroundTint="#4CAF50"
                android:drawableEnd="@drawable/arrow_next"

                android:text="@string/str_next_button"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
